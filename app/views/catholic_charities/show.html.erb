<%= render "layouts/navbar" %>
<title>Catholic Charities Entry</title>
<body style="font-family: 'Lato', sans-serif;">

<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@catholic_charity.photo) %>
</p>

<p style="font-size: 30px;font-family: 'Lobster', cursive;">
  <%= @catholic_charity.name %> -- <%= @catholic_charity.age %>
</p>

<div class="row">
  <div class="col-md-2 col-md-offset-5 text-center">
    <%= link_to 'Edit', edit_catholic_charity_path(@catholic_charity) %> |
    <%= link_to 'Back', catholic_charities_path %>
  </div>
</div>

<br>

<p>
  <strong>Summary: </strong>
  <%= @catholic_charity.summary %>
</p>

<br>

<p>
  <strong>Story: </strong>
  <%= @catholic_charity.story %>
</p>

<br>

<p>
  <strong>Donation Destination: </strong>
  <%= @catholic_charity.donationDest %>
</p>

<br>

<p>
  <strong>Location: </strong>
  <%= @catholic_charity.locationCounty %>
</p>

<br>

<p style="font-size: 20px;color:green;">
  <strong>Total Goal Amount: </strong>
  <%= @catholic_charity.goalAmount %>
</p>

<br>

<div class="row">
    <div>
      <a href="https://www.paypal.com/us/home" target="_blank"><button type="button" class="btn btn-primary btn-lg col-md-4 col-md-offset-4 block-centered">Lend <%= @catholic_charity.name %> a helping hand today!  <span class="glyphicon glyphicon-heart"></span></button></a>
    </div>
</div>

<%= render "layouts/footer" %>
<% yield %>
</body>
