
<%= render "layouts/navbar" %>
<body style="font-family: 'Lato', sans-serif;">
<title> Sacred Heart Community Service </title>

<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@sacred_heart.photo) %>
</p>

<p style="font-size: 30px;font-family: 'Lobster', cursive;">
  <%= @sacred_heart.name %> -- <%= @sacred_heart.age %>
</p>


<div class="row">
  <div class="col-md-2 col-md-offset-5 text-center">
    <%= link_to 'Edit', edit_sacred_heart_path(@sacred_heart) %> |
    <%= link_to 'Back', sacred_hearts_path %>
  </div>
</div>

<br >

<p>
  <strong>Summary: </strong>
  <%= @sacred_heart.summary %>
</p>

<br>

<p>
  <strong>Story: </strong>
  <%= @sacred_heart.story %>
</p>

<br>

<p>
  <strong>Donation Destintion: </strong>
  <%= @sacred_heart.donationDest %>
</p>

<br>

<p>
  <strong>Location: </strong>
  <%= @sacred_heart.locationCounty %>
</p>

<br>

<p style="font-size: 20px;color:green;">
  <strong>Total Goal Amount: </strong>
  <%= @sacred_heart.goalAmount %>
</p>

<br>

<div class="row">
    <div class="center-block">
      <a href="https://www.paypal.com/us/home" target="_blank"><button type="button" class="btn btn-primary btn-lg col-md-4 col-md-offset-4 block-centered">Lend <%= @sacred_heart.name %> a helping hand today!  <span class="glyphicon glyphicon-heart"></span></button></a>
    </div>
</div>

<br>

</body>
<%= render "layouts/footer"%>
<%= yield %>
